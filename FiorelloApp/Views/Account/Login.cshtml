@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center ">
        <div class="input-section" style="background-color:darkcyan; padding:20px; width:400px; border-radius:20px;">
            <h2 style="text-align:center">Login</h2>
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="UsernameOrEmail" class="form-label">Username Or Email</label>
                    <input class="form-control" asp-for="UsernameOrEmail">
                    <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input class="form-control" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div>
                    <a asp-controller="Account" asp-action="ForgotPassword" style="color:brown; text-decoration:none">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationPartial" />
}

