@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container">
    <div class="row justify-content-center ">
        <div class="input-section" style="background-color:darkcyan; padding:20px; width:400px; border-radius:20px;">
            <h2 style="text-align:center">Reset Password</h2>
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-controller="Account" asp-action="ResetPassword" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input class="form-control" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Repeat Password</label>
                    <input class="form-control" asp-for="ConfirmPassword">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <input type="hidden" asp-for="UserId" value="@Model.UserId"/>
                <input type="hidden" asp-for="Token" value="@Model.Token"/>
                <button type="submit" class="btn btn-primary">Reset</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationPartial" />
}

