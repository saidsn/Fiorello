@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="container">
    <div class="row justify-content-center ">
        <div class="input-section" style="background-color:darkcyan; padding:20px; width:400px; border-radius:20px;">
            <h2 style="text-align:center">Forgot Password</h2>
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input class="form-control" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationPartial" />
}

